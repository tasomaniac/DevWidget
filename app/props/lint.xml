<?xml version="1.0" encoding="UTF-8"?><!-- http://tools.android.com/tips/lint-checks -->
<lint>
  <issue id="UnusedResources" severity="error" >
    <ignore regexp="default_gap"/>
    <ignore regexp="half_gap"/>
    <ignore regexp="quarter_gap"/>
    <ignore regexp="keyline_1"/>
    <ignore regexp="keyline_2"/>
  </issue>
  <issue id="ParcelClassLoader" severity="error" />
  <issue id="HardcodedText" severity="error" />
  <issue id="HardwareIds" severity="error" />
  <issue id="DefaultLocale" severity="error" />
  <issue id="CheckResult" severity="error" />
  <issue id="ObsoleteSdkInt" severity="error" />
  <issue id="VisibleForTests" severity="error" />
  <issue id="IconDipSize" severity="error" />
  <issue id="IconDuplicatesConfig" severity="error" />
  <issue id="ObsoleteLayoutParam" severity="error" />
  <issue id="InefficientWeight" severity="error" />
  <issue id="RtlHardcoded" severity="error" />
  <issue id="InvalidPackage" severity="error">
    <ignore regexp="okio-.*jar" />
    <ignore regexp="retrofit-.*.jar" />
  </issue>
  <issue id="TypographyEllipsis" severity="error" />
  <issue id="SimpleDateFormat" severity="error" />
  <issue id="ThrowableNotAtBeginning" severity="error" />
  <issue id="BinaryOperationInTimber" severity="error" />
  <issue id="WifiManagerPotentialLeak" severity="error" />

  <issue id="SelectableText">
    <!-- Widget is never selectable -->
    <ignore regexp="app_widget.*.xml"/>
  </issue>

  <issue id="ObsoleteLintCustomCheck">
    <ignore regexp="timber.lint.IssueRegistry"/>
  </issue>

  <!-- Not working well with kotlin extensions -->
  <issue id="UnusedIds" severity="ignore" />
</lint>
